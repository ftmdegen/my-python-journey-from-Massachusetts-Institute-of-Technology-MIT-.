#collect data from user

yearly_salary = float(input('Please enter the yearly salary?: '))
portion_saved = float(input('Please enter the portion of salary to be saved, in decimal. (E.g 0.1 for 10%): '))
cost_of_your_dreamhome = float(input("what's the cost of your dream home?"))

#known constants

portion_down_payment = 0.25
r = 0.05

#calculations

down_payment = cost_of_your_dreamhome * portion_down_payment
months = 0
amount_saved = 0
monthly_salary = yearly_salary/12  #monthly salary

while amount_saved < down_payment:
    amount_saved += amount_saved * (r/12)  #you'd receive an interest for your savings
    amount_saved += portion_saved * monthly_salary  #your savings increases each month also
    months +=1   #this would keep on going on till whenever the condition is false

print(f'number of months: {months} ')



